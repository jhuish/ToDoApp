@model ToDoTask

    <form asp-action="Index" method="post">

        <div class="form-group form-row">
            <label class="col-lg-12">Priority: </label>
            <div class="btn-group btn-group-toggle" data-toggle="buttons">
                <label class="btn btn-success m-1">
                    <input type="radio" name="ToDoPriorityLevel" id="option1" autocomplete="off" checked value="1">  Low
                </label>
                <label class="btn btn-primary m-1">
                    <input type="radio" name="ToDoPriorityLevel" id="option2" autocomplete="off" value="2">Medium
                </label>
                <label class="btn btn-danger m-1">
                    <input type="radio" name="ToDoPriorityLevel" id="option3" autocomplete="off" value="3"> High
                </label>
                <span asp-validation-for="ToDoPriorityLevel" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group form-row">
            <label asp-for="ToDoName" class="col-lg-1 col-form-label">Task Name:</label>
            <input asp-for="ToDoName" class=" col-lg-6 form-control" />
            <span asp-validation-for="ToDoName" class="text-danger"></span>
        </div>
       

        <div class="form-group form-row">
            <label asp-for="ToDoCategory" class="col-lg-1 col-form-label">Category:</label>
            <input asp-for="ToDoCategory" class="col-lg-4 form-control" />
            <span asp-validation-for="ToDoCategory" class="text-danger"></span>
        </div>

   

        <div class="form-group">
            <div class="col-lg-2 m-1">
                <input type="submit" class="btn btn-dark float-right" value="Create Task " />
            </div>
        </div>
    </form>



